@model List<DataLayer.Entities.AttendanceTable>

<h2>Confirm Attendance Data</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Attendance Time</th>
            <th>Departure Time</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.AttendanceTime</td>
                <td>@item.DepartureTime</td>
                <td>@item.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="SaveConfirmedData" method="post">
    <button type="submit" class="btn btn-primary">Confirm and Save</button>
</form>
