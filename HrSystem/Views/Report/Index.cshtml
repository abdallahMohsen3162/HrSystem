@{
    ViewData["Title"] = "Search Employee Monthly Report";
    var employees = ViewData["Employees"] as SelectList;
}

<div class="container-fluid d-flex justify-content-between">
    <h2>Search Employee Monthly Report</h2>
    <a class="btn btn-primary" asp-action="MultiReport" asp-controller="Report">All Reports</a>
</div>

@await Component.InvokeAsync("ReportSearch")

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
