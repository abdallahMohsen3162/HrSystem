@model DataLayer.ViewModels.EmployeeMonthlyReportViewModel
<section class="invoice-template">
    <div class="card">
        <div class="card-body p-3">
            <div id="invoice-template" class="card-block">
                <div id="invoice-company-details" class="row">
                    <div class="col-6 text-left">
                        <img src="https://firebasestorage.googleapis.com/v0/b/prompt-397314.appspot.com/o/logo.png?alt=media&token=cd525b43-56a0-4b91-9b72-82a7b3e3eb86" alt="company logo" class="mb-2" width="70">
                        <ul class="px-0 list-unstyled">
                            <li class="text-bold-800">Pioneer Solutions Company</li>
                            <li>Cairo,</li>
                            <li>Naser City,</li>
                            <li>102 Makrim Ebid,</li>
                        </ul>
                    </div>
                    <div class="col-6 text-right">
                        <h2>INVOICE</h2>
                        <p class="pb-3"># INV-@Model.EmployeeId</p>
                        <ul class="px-0 list-unstyled">
                            <li>Balance Due</li>
                            <li class="lead text-bold-800">@Model.NetSalary.ToString("C")</li>
                        </ul>
                    </div>
                </div>


                <div class="pt-2" id="pdfContent">
                    <div class="row">
                        <table class="table table-striped table-bordered zero-configuration mt-40">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Employee Name</th>
                                    <th>Phone</th>
                                    <th>Salary</th>
                                    <th>Attendance Days</th>
                                    <th>Absent Days</th>
                                    <th>Overtime Hours</th>
                                    <th>Discount Hours</th>
                                    <th>Bonuses</th>
                                    <th>Deductions</th>
                                    <th>Total Salary</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.EmployeeId</td>
                                    <td>@Model.EmployeeName</td>
                                    <td>N/A</td>
                                    <td>@Model.BasicSalary.ToString("C")</td>
                                    <td>@Model.AttendedDays</td>
                                    <td>@Model.AbsentDays</td>
                                    <td>@Model.BonusesByHours.ToString("F2")</td>
                                    <td>@Model.DeductionsByHours.ToString("F2")</td>
                                    <td>@Model.BonusesByMoney.ToString("C")</td>
                                    <td>@Model.DeductionsByMoney.ToString("C")</td>
                                    <td>@Model.NetSalary.ToString("C")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-12 text-left">
                            <p class="lead">Payment Methods:</p>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-borderless table-sm">
                                        <tbody>
                                            <tr>
                                                <td>Bank name:</td>
                                                <td class="text-right">ABC Bank, USA</td>
                                            </tr>
                                            <tr>
                                                <td>Acc name:</td>
                                                <td class="text-right">Amanda Orton</td>
                                            </tr>
                                            <tr>
                                                <td>IBAN:</td>
                                                <td class="text-right">FGS165461646546AA</td>
                                            </tr>
                                            <tr>
                                                <td>SWIFT code:</td>
                                                <td class="text-right">BTNPP34</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <p class="lead">Total due</p>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Sub Total</td>
                                            <td class="text-right">@Model.BasicSalary.ToString("C")</td>
                                        </tr>
                                        <tr>
                                            <td>Bonuses</td>
                                            <td class="text-right">@Model.BonusesByMoney.ToString("C")</td>
                                        </tr>
                                        <tr>
                                            <td>Deductions</td>
                                            <td class="text-right">@Model.DeductionsByMoney.ToString("C")</td>
                                        </tr>
                                        <tr class="bg-grey bg-lighten-4">
                                            <td class="text-bold-800">Total Net Salary</td>
                                            <td class="text-bold-800 text-right">@Model.NetSalary.ToString("C")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center">
                                <p>Authorized person</p>
                                <img src="https://firebasestorage.googleapis.com/v0/b/prompt-397314.appspot.com/o/signature-scan.png?alt=media&token=24d1f635-8b66-4cbe-afdc-806c7e051645" alt="signature" class="width-250">
                                <h6>Amanda Orton</h6>
                                <p class="text-muted">Managing Director</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Invoice Footer -->
                <div id="invoice-footer">
                        <div class="row">
                            <div class="col-md-9 col-sm-12">
                                <h6>Terms &amp; Condition</h6>
                                <p>
                                    You know, being a test pilot isn't always the healthiest business in the world. We predict too
                                    much for the next year and yet far too little for the next 10.
                                </p>
                            </div>
                            <div class="text-center">

                            <button id="download" class="btn btn-primary my-1"> <i class="fa fa-download"></i> Download Invoice</button>
                            <button id="send" class="btn btn-success my-1"><i class="fa fa-paper-plane-o"></i> Send PDF via email</button>
                            </div>
                        </div>
                </div>

            </div>
        </div>
    </div>
</section>

<br />




<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
<script>
    const element = document.getElementById("pdfContent");


    document.getElementById("download").addEventListener("click", function () {
        const opt = {
            margin: 0.5,
            filename: 'div-content.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2 },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
        };

        html2pdf().set(opt).from(element).save();
    });


    document.getElementById("send").addEventListener("click", function () {

        html2pdf().from(element).toPdf().outputPdf('blob').then(function (pdfBlob) {

            const formData = new FormData();
            formData.append('file', pdfBlob, 'div-content.pdf');


            fetch('/Report/UploadPdf', {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        alert('PDF sent to the server successfully!');
                    } else {
                        alert('Failed to send PDF.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error sending PDF.');
                });
        });
    });
</script>