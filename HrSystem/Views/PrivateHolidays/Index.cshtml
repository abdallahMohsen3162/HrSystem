@model IEnumerable<DataLayer.Entities.PrivateHoliday>

<div class="container">
    <h2 class="text-center my-4 text-dark">Private Holidays</h2>

    <div class="card border-0 bg-white">
        <div class="card-body p-0">
            <table class="table table-bordered align-middle">
                <thead class="bg-white">
                    <tr>
                        <th>Employee Name</th>
                        <th>Holiday Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Employee.EmployeeName</td>
                            <td>@item.HolidayDate.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="#" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                                   data-bs-target="#deleteModal"
                                   data-holidayname="@item.HolidayDate.ToShortDateString()"
                                   data-url="@Url.Action("Delete", new { id = item.Id })">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-outline-dark mt-4">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

@section Scripts {
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var holidayName = button.data('holidayname');
            var deleteUrl = button.data('url');
            var modal = $(this);
            modal.find('#holidayName').text(holidayName);
            modal.find('#deleteButton').attr('href', deleteUrl);
        });
    </script>
}
